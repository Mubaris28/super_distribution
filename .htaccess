# Super Distribution - Apache config
# Use this for our website (PHP forms + static HTML).
# URLs work without .html (e.g. /contact, /about) after upload.

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Remove .html from browser: redirect /page.html -> /page (301)
  RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
  RewriteRule ^ /%1 [R=301,L,NE]

  # Serve .html when URL has no extension: /page or /products-innerpage/name -> .html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}.html -f
  RewriteRule ^(.+)$ $1.html [L]

  # Custom 404 (no file and no .html version)
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME}.html !-f
  RewriteRule ^(.*)$ 404.html [L,QSA]
</IfModule>

# Security: block direct access to config and logs
<FilesMatch "^(mail-config|security-config)\.php$">
  <IfModule mod_authz_core.c>
    Require all denied
  </IfModule>
</FilesMatch>

# Disable directory listing
<IfModule mod_autoindex.c>
  Options -Indexes
</IfModule>

# Optional: force HTTPS (uncomment when using SSL)
# <IfModule mod_rewrite.c>
#   RewriteCond %{HTTPS} off
#   RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# </IfModule>

# MIME types
<IfModule mod_mime.c>
  AddType application/json .json
  AddType image/svg+xml .svg
</IfModule>

# Caching for static assets
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpeg "access plus 1 month"
  ExpiresByType image/png "access plus 1 month"
  ExpiresByType image/webp "access plus 1 month"
  ExpiresByType image/svg+xml "access plus 1 month"
  ExpiresByType text/css "access plus 1 week"
  ExpiresByType application/javascript "access plus 1 week"
</IfModule>
